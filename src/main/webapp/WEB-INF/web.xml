<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<display-name>Archetype Created Web Application</display-name>

    <servlet-mapping>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <servlet-class>main.java.servlet.DeleteAuthorServlet</servlet-class>
    </servlet>


    <!--Update user-->
    <servlet-mapping>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <servlet-class>main.java.servlet.UpdateAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/updateBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>main.java.servlet.UpdateBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>main.java.servlet.DeleteBookServlet</servlet-class>
    </servlet>
</web-app>
